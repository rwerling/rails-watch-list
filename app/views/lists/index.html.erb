<%# <h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p> %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All lists</h1>
      <ul class="list-group mb-3">
        <% @lists.each do |list| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to list.name, list_path(list) %>
            <%= link_to 'Delete List', list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'text-danger' %></small>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new list", new_list_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
