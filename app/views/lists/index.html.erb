<%# <h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p> %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <div class="card-trip mb-3">
        <%= cl_image_tag("cld-sample-3.jpg", :cloud_name => "djsifxgi7") %>
        <div class="card-trip-infos">
          <div>
            <h1>All lists</h1>
            <p>Short description here!</p>
          </div>
        </div>
      </div>

      <div class="row mb-3">
        <% @lists.each do |list| %>
          <div class="col-12 col-lg-6 mb-3">
            <div class="card-product">
              <img class="card-image" data-aos="zoom-in" src= <%= cl_image_path(list.photo.key, :cloud_name => "djsifxgi7") %> />
              <div class="card-product-infos">
                <h2><%= link_to list.name, list_path(list) %></h2>
                <p><%= link_to 'Delete List', list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'text-danger' %></small></p>
              </div>
            </div>
          </div>

        <% end %>
      </div>
      <%= link_to "Add a new list", new_list_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
